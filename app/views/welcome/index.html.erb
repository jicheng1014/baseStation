
<div class="row">
  <div class="col-xs-9 all_height">
    <h1 id = "welcome_h1">欢迎来到定位查询系统</h1>
    <div class="row" id="map_div" >
      <div class="col-xs-12 all_height" id="map" ></div>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        登录
      </div>

      <div class="panel-body">
        <%= link_to "新建节点地址", stations_path,remote:true %>


      </div>

    </div>
    <div class="panel panel-primary">
      <div class="panel-heading">
       屏幕处节点 
      </div>

      <div class="panel-body" style="height:340px;overflow:auto" id="station_list">

      </div>

    </div>
  </div>
</div>
<div class="editor">
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" >&times;</button>
          <h4 class="modal-title" id="myModalLabel">添加新节点</h4>
        </div>
        <div class="modal-body">
          <% @station = Station.new %>
          <%= render  'stations/form' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>


<% content_for :header do %>
  <script type="text/javascript" charset="utf-8">
    var idata = <%= raw @stations.to_json %>;
  </script>
<% end %>
